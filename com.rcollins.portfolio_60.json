{
  "app-id": "com.rcollins.portfolio_60",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "portfolio_60",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--share=ipc",
    "--share=network",
    "--filesystem=xdg-pictures",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-config/portfolio_60:create",
    "--filesystem=~/.portfolio_60-temp:create"
  ],
  "modules": [
    {
      "name": "portfolio_60",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 src-tauri/target/release/app /app/bin/portfolio_60",
        "install -Dm755 src-tauri/target/release/bun /app/bin/bun",
        "mkdir -p /app/share/portfolio_60/src",
        "cp -r src/server /app/share/portfolio_60/src/server",
        "cp -r src/shared /app/share/portfolio_60/src/shared",
        "cp -r src/ui /app/share/portfolio_60/src/ui",
        "cp -r src/config /app/share/portfolio_60/src/config || true",
        "cp -r node_modules /app/share/portfolio_60/node_modules",
        "cp package.json /app/share/portfolio_60/",
        "cp bunfig.toml /app/share/portfolio_60/",
        "cp .cspell.json /app/share/portfolio_60/ || true",
        "install -Dm644 com.rcollins.portfolio_60.desktop /app/share/applications/com.rcollins.portfolio_60.desktop",
        "install -Dm644 src-tauri/icons/icon.png /app/share/icons/hicolor/512x512/apps/com.rcollins.portfolio_60.png",
        "install -Dm644 src-tauri/icons/128x128.png /app/share/icons/hicolor/128x128/apps/com.rcollins.portfolio_60.png",
        "install -Dm644 src-tauri/icons/32x32.png /app/share/icons/hicolor/32x32/apps/com.rcollins.portfolio_60.png"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
